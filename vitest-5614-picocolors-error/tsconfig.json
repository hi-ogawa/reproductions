{
	"compilerOptions": {
		"jsx": "react-jsx",
		"lib": ["esnext", "dom"],
		"target": "esnext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": ["@testing-library/jest-dom"],
		"strict": true,
		"declaration": true,
		"noEmit": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["**/*.ts", "**/*.tsx", "./vitest.setup.ts"],
	"exclude": ["node_modules"]
}
