// https://www.prisma.io/docs/orm/overview/databases/sqlite
generator client {
  provider        = "prisma-client-js"
  // need to use a valid packaage name so that Vite can externalize it.
  // https://github.com/vitejs/vite/issues/19036
  // https://github.com/remix-run/react-router/issues/12610#issuecomment-2773018176
  output = "../node_modules/prisma-generated"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Counter {
  id    Int @id @default(1)
  value Int @default(0)
}
